<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/color_appwidget" />-->
            <corners
                android:bottomRightRadius="4dp"
                android:topRightRadius="4dp" />
            <gradient
                android:angle="0"
                android:startColor="@color/color_appwidget_bg"
                android:endColor="@color/color_appwidget_pressed" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_appwidget_pressed" />
            <corners
                android:bottomRightRadius="4dp"
                android:topRightRadius="4dp" />
        </shape>
    </item>

</selector>