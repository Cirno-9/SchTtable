                android:layout_toEndOf="@id/iv_highlight2"
                android:layout_toRightOf="@id/iv_highlight2"
                android:background="@color/color_divider" />

            <TextView
                android:id="@+id/tv_room2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/iv_highlight2"
                android:layout_toRightOf="@id/iv_highlight2"
                android:ellipsize="start"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_course2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@id/tv_room2"
                android:layout_below="@id/tv_divider2"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/iv_highlight2"
                android:layout_toRightOf="@id/iv_highlight2"
                android:gravity="center"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_course3"
